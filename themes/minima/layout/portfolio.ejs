<h2>Portfolio</h2>

<% site.posts.filter(post => post.tags && post.tags.some(tag => tag.name ===
'Portfolio')).sort((a, b) => b.date.valueOf() -
a.date.valueOf()).each(function(post) { %>
<article>
  <div class="row">
    <div class="left mb-3 ten columns">
      <span class="post-icon">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon-tabler icon-tabler-pencil icons-tabler-outline icon"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
          <path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4" />
          <path d="M13.5 6.5l4 4" />
        </svg> </span
      ><a href="<%- url_for(post.path) %>" class="post-link">
        <span class="post-title">
          <% if (post.title == "") { %> no title <% } else { %> <%- post.title
          %> <% } %>
        </span>
      </a>
    </div>
  </div>
</article>
<% }) %> <%- partial('partial/pagination', {type: 'page'}) %>
