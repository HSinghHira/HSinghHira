<h2>Blog</h2>

<% site.posts.filter(post => post.tags && post.tags.some(tag => tag.name === 'Blog')).each(function(post) { %>
<article>
  <div class="row">
    <div class="left three columns lit">
      <p class="bottom"> <span class="post-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="icon-tabler icon-tabler-calendar-week icons-tabler-filled icon">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
